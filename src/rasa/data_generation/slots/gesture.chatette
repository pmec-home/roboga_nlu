@[gesture]
    waving
    ~[rising left arm] = rising left arm
    ~[rising right arm] = rising right arm
    ~[pointing left] = pointing left
    ~[pointing right] = pointing right

~[rising left arm]
    rising left arm
    raising their left arm
~[rising right arm]
    rising right arm
    raising their right arm
~[pointing left]
    pointing left
    pointing to the right
~[pointing right]
    pointing right
    pointing to the left